<section class="brand-story">
  <div class="container">
    <div class="brand-story-grid">
      <!-- Text -->
      <div class="reveal">
        <h2>{{ section.settings.heading | default: 'We believe blank walls are missed opportunities.' }}</h2>
        <p>{{ section.settings.paragraph_1 | default: 'Canvas Culture was born from a simple idea: your home should tell your story. Every room is a chance to surround yourself with art that moves you — a vintage Porsche in your man cave, a sacred image above your fireplace, or something that just makes you smile every morning.' }}</p>
        <p>{{ section.settings.paragraph_2 | default: 'We obsess over quality so you don't have to. Every canvas is hand-stretched over solid pine bars, printed with archival inks, and arrives ready to hang.' }}</p>
        <p style="font-weight:600;color:var(--color-charcoal);">{{ section.settings.bold_line | default: 'Made in the USA. Built to last.' }}</p>
        <a href="{{ section.settings.link | default: '/pages/about' }}" class="story-link" style="display:inline-block;margin-top:2rem;font-size:0.875rem;font-weight:600;color:var(--color-gold);letter-spacing:0.03em;">
          {{ section.settings.link_text | default: 'Read Our Story →' }}
        </a>
      </div>

      <!-- Image -->
      <div class="brand-image reveal-scale grain">
        {%- if section.settings.image -%}
          <img src="{{ section.settings.image | image_url: width: 800 }}" alt="{{ section.settings.image.alt | default: 'Canvas art lifestyle' }}" loading="lazy">
        {%- else -%}
          {{ 'lifestyle-2' | placeholder_svg_tag }}
        {%- endif -%}
      </div>
    </div>

    <!-- Stats -->
    <div class="stats-row stagger-children">
      {%- for block in section.blocks -%}
        <div class="stat-item reveal" {{ block.shopify_attributes }}>
          <span class="stat-number" data-count-up data-target="{{ block.settings.value }}" data-suffix="{{ block.settings.suffix }}" {% if block.settings.decimal %}data-decimal="true"{% endif %}>0{{ block.settings.suffix }}</span>
          <p class="stat-label">{{ block.settings.label }}</p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Brand Story",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "We believe blank walls are missed opportunities." },
    { "type": "textarea", "id": "paragraph_1", "label": "Paragraph 1" },
    { "type": "textarea", "id": "paragraph_2", "label": "Paragraph 2" },
    { "type": "text", "id": "bold_line", "label": "Bold Line", "default": "Made in the USA. Built to last." },
    { "type": "text", "id": "link_text", "label": "Link Text", "default": "Read Our Story →" },
    { "type": "url", "id": "link", "label": "Link" },
    { "type": "image_picker", "id": "image", "label": "Image" }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat",
      "settings": [
        { "type": "number", "id": "value", "label": "Number Value", "default": 10000 },
        { "type": "text", "id": "suffix", "label": "Suffix", "default": "+" },
        { "type": "text", "id": "label", "label": "Label", "default": "Happy Customers" },
        { "type": "checkbox", "id": "decimal", "label": "Show decimal?", "default": false }
      ]
    }
  ],
  "presets": [{ "name": "Brand Story", "blocks": [
    { "type": "stat", "settings": { "value": 10000, "suffix": "+", "label": "Happy Customers" } },
    { "type": "stat", "settings": { "value": 500, "suffix": "+", "label": "Curated Prints" } },
    { "type": "stat", "settings": { "value": 30, "suffix": " Days", "label": "Return Guarantee" } },
    { "type": "stat", "settings": { "value": 4.9, "suffix": "/5", "label": "Average Rating", "decimal": true } }
  ] }]
}
{% endschema %}
