<div class="trust-badges">
  <div class="container">
    <div class="trust-grid stagger-children">
      {%- for block in section.blocks -%}
        <div class="trust-item reveal" {{ block.shopify_attributes }}>
          <div class="trust-icon">
            {%- case block.settings.icon -%}
              {%- when 'flag' -%}
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 15s1-1 4-1 5 2 8 2 4-1 4-1V3s-1 1-4 1-5-2-8-2-4 1-4 1z"/><line x1="4" x2="4" y1="22" y2="15"/></svg>
              {%- when 'return' -%}
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/><path d="M3 3v5h5"/></svg>
              {%- when 'star' -%}
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
              {%- when 'truck' -%}
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"/><path d="M15 18H9"/><path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14"/><circle cx="17" cy="18" r="2"/><circle cx="7" cy="18" r="2"/></svg>
              {%- else -%}
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/></svg>
            {%- endcase -%}
          </div>
          <span class="trust-label">{{ block.settings.label }}</span>
          <span class="trust-sub">{{ block.settings.subtext }}</span>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Trust Badges",
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        { "type": "select", "id": "icon", "label": "Icon", "options": [
          { "value": "flag", "label": "Flag" },
          { "value": "return", "label": "Return" },
          { "value": "star", "label": "Star" },
          { "value": "truck", "label": "Truck" }
        ], "default": "flag" },
        { "type": "text", "id": "label", "label": "Label", "default": "Hand-Made in the USA" },
        { "type": "text", "id": "subtext", "label": "Subtext", "default": "Every canvas crafted with care" }
      ]
    }
  ],
  "presets": [{
    "name": "Trust Badges",
    "blocks": [
      { "type": "badge", "settings": { "icon": "flag", "label": "Hand-Made in the USA", "subtext": "Every canvas crafted with care" } },
      { "type": "badge", "settings": { "icon": "return", "label": "30-Day Returns", "subtext": "Not happy? We'll make it right" } },
      { "type": "badge", "settings": { "icon": "star", "label": "10,000+ Happy Customers", "subtext": "See what they're saying" } },
      { "type": "badge", "settings": { "icon": "truck", "label": "Always Free Shipping", "subtext": "No minimums, no surprises" } }
    ]
  }]
}
{% endschema %}
